{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "discord-ui-toolkit": ["./src/index"],
      "@inputs/*": ["./src/components/inputs/*"],
      "@internal/*": ["./src/components/internal/*"],
      "@layout/*": ["./src/components/layout/*"],
      "@lists/*": ["./src/components/lists/*"],
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@values/*": ["./src/values/*"]
    },
    "jsx": "react",
    "typeRoots": ["./typings", "./node_modules/@types"]
  }
}
